<UserControl 
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="LabPrototype.Views.Components.SettingsForms.ColorSchemeSettingsForm">

	<Grid RowDefinitions="*, auto">
		<StackPanel Grid.Row="0" Classes="formStackPanel">

			<Grid Classes="formItem" ColumnDefinitions="auto,*">
				<TextBlock	Grid.Column="0" Text="Name" />
				<TextBox	Grid.Column="1" Watermark="Name" Text="{Binding Form.Name}" />
			</Grid>

			<Grid Classes="formItem" ColumnDefinitions="auto,*">
				<TextBlock	Grid.Column="0" Text="Primary Color" />
				<TextBox	Grid.Column="1" Watermark="Primary Color" Text="{Binding Form.PrimaryColor}" />
			</Grid>

			<Grid Classes="formItem" ColumnDefinitions="auto,*">
				<TextBlock	Grid.Column="0" Text="Secondary Color" />
				<TextBox	Grid.Column="1" Watermark="Secondary Color" Text="{Binding Form.SecondaryColor}" />
			</Grid>
		</StackPanel>

		<StackPanel Grid.Row="1" Classes="formButtonPanel">
			<Button Content="Submit" Command="{Binding SubmitCommand}" />
			<Button Content="Cancel" Command="{Binding CancelCommand}" />
		</StackPanel>
	</Grid>
	
</UserControl>
