<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:LabPrototype.Views.Components;assembly=LabPrototype"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="LabPrototype.Views.Components.MeterDetailsView">
	<StackPanel Orientation="Vertical">
		<Border Background="Black" Padding="10">
			<TextBlock Text="Details" />
		</Border>
		<ItemsRepeater Items="{Binding DetailViewModels}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="10">
			<ItemsRepeater.Layout>
				<StackLayout Spacing="16" Orientation="Vertical" />
			</ItemsRepeater.Layout>
			<ItemsRepeater.ItemTemplate>
				<DataTemplate>
					<local:DetailView />
				</DataTemplate>
			</ItemsRepeater.ItemTemplate>
		</ItemsRepeater>
	</StackPanel>
</UserControl>
