<UserControl	xmlns="https://github.com/avaloniaui"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:LabPrototype.Views.Components;assembly=LabPrototype"
				mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
				x:Class="LabPrototype.Views.Components.MeasurementHistoryTable">
	<Grid 
		RowDefinitions="auto,*" 
		IsVisible="{Binding IsVisible}">
		<local:ToggleMeasurementListing 
			Grid.Row="0" 
			DataContext="{Binding ToggleMeasurementListingViewModel}" />
		<DataGrid
			x:Name="TableControl"
			Grid.Row="1"
			AutoGenerateColumns="False"
			Items="{Binding Measurements}"
			HeadersVisibility="None"
			ColumnWidth="*">
		</DataGrid>
	</Grid>
</UserControl>
