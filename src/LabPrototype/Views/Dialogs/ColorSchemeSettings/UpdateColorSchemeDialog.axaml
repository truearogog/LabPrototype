<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		xmlns:settings-forms="using:LabPrototype.Views.Components.SettingsForms"
        x:Class="LabPrototype.Views.Dialogs.ColorSchemeSettings.UpdateColorSchemeDialog"
        Title="Edit Color Scheme"
		TransparencyLevelHint="AcrylicBlur"
		Background="Transparent"
		SizeToContent="WidthAndHeight">
	<Panel>
		<ExperimentalAcrylicBorder Classes="b60" />

		<Grid Margin="20" RowDefinitions="auto,*">
			<TextBlock Grid.Row="0" Classes="dialogHeader" Text="Edit Color Scheme" />
			<settings-forms:ColorSchemeSettingsForm Grid.Row="1" DataContext="{Binding SettingsFormViewModel}" />
		</Grid>
	</Panel>
</Window>
