<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		xmlns:settings-forms="using:LabPrototype.Views.Components.SettingsForms"
        x:Class="LabPrototype.Views.Dialogs.MeterSettings.CreateMeterDialog"
        Title="New meter"
		TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
		MinWidth="400"
		MinHeight="300"
		SizeToContent="WidthAndHeight">
	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Black"
					TintOpacity="1"
					MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<Grid Margin="20" RowDefinitions="auto,*">
			<TextBlock Grid.Row="0" Text="New meter" FontSize="20" />
			<settings-forms:MeterSettingsForm Grid.Row="1" DataContext="{Binding SettingsFormViewModel}" />
		</Grid>
	</Panel>
</Window>
